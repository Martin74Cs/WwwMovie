@model IEnumerable<Actor>

    @{
    ViewData["Title"] = "List Autorů";
    }
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(m => m.ProfilePictureUrl)</th>
                        <th>@Html.DisplayNameFor(m => m.FullName)</th>
                        <th>@Html.DisplayNameFor(m => m.Bio)</th>
                        <th>Volba</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
               {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureUrl" alt="@item.FullName" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>
                        <td>
                            <a class="btn btn-outline-primary"  asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a> |
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-eye"></i> Detail</a> |
                            <a class="btn btn-danger text-white"asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
               }
                </tbody>
            </table>
        </div>
    </div>

  <div style="position: fixed; right: 25px; bottom: 50px;" class="text-white">
      <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
          <i class="bi bi-plus-circle"></i> Pridat</a>
  </div>